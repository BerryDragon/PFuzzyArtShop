@model List<PFuzzyArtShop.Models.ShoppingCartItem>

<h2>Shopping Cart</h2>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (item.Merch.Name == "Jacket")
                        {
                            <img src="~/images/jacket.jpg" alt="Jacket" width="100" />
                        }
                        else if (item.Merch.Name == "KeyChain")
                        {
                            <img src="~/images/keychain.jpg" alt="KeyChain" width="100" />
                        }
                    </td>
                    <td>@item.Merch.Name</td>
                    <td>@item.Merch.Price.ToString("C")</td>
                    <td>@item.Quantity</td>
                    <td>@((item.Merch.Price * item.Quantity).ToString("C"))</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-right">
        <a href="@Url.Action("Checkout", "Order")" class="btn btn-primary">Place Order</a>
    </div>
}
else
{
    <p>Your shopping cart is empty.</p>
}